                                Console.log(value);
                            });
                            */
                        } else if (SearchBy == "Doctor") {
                            console.log(result);
                        } else if (SearchBy == "Pharmacy") {
                            console.log(result);
                        } else if (SearchBy == "MedEnterprise") {
                            console.log(result);
                        }


                    }
                }

            })

        });
    });
</script>